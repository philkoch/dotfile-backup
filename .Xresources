!urxvt config
URxvt.saveLines: 1000
URxvt.scrollBar: false
!URxvt.foreground: white
URxvt.secondaryScroll: true
URxvt.font: xft:Input Mono Narrow:pixelsize=13
URxvt.perl-ext: default,matcher
URxvt.url-launcher: $BROWSER
URxvt.matcher.button: 2
URxvt.tabbed.saveLines: 1000
URxvt.tabbed.scrollBar: false
URxvt.tabbed.tabbar-fg: 3
URxvt.tabbed.tabbar-bg: 0
URxvt.tabbed.tab-fg: 0
URxvt.tabbed.secondaryScroll: true
URxvt.tabbed.font: xft:Input Mono Narrow:pixelsize=13
!xterm style word-wise movement
URxvt.keysym.Control-Left:    \033[1;5D
URxvt.keysym.Control-Right:    \033[1;5C
URxvt.depth: 32
!URxvt.background: rgba:0000/0000/0200/c800

!smaller cursor
Xcursor.size: 16

! ------------------------------------------------------------------------------
! ROFI Color theme
! ------------------------------------------------------------------------------
rofi.color-enabled: true
!background, box, dotted line above results
rofi.color-window: #282a36, #eff0eb, #57c7ff
rofi.color-normal: #373b41, #57c7ff, #282a2e, #57c7ff, #373b41
rofi.color-active: #373b41, #f3f99d, #282a2e, #f3f99d, #373b41
rofi.color-urgent: #373b41, #ff5c57, #282a2e, #ff5c57, #373b41

! ------------------------------------------------------------------------------
! PRETTY FONTS
! ------------------------------------------------------------------------------

Xft.autohint: 0
Xft.dpi: 96
Xft.antialias: true
Xft.rgba: rgb
Xft.hinting: true
Xft.hintstyle: hintslight
Xft.lcdfilter: lcddefault


! ------------------------------------------------------------------------------
! irssi
! ------------------------------------------------------------------------------
Rxvt.modifier: alt

!-------------------------------------------------------------------------------
!  SNAZZY COLORS
!-------------------------------------------------------------------------------
URxvt*foreground: #eff0eb
URxvt*background: #282a36
URxvt*cursorColor: #97979b

! Black + DarkGrey
URxvt*color0: #282a36
URxvt*color8: #686868

! DarkRed + Red
URxvt*color1: #ff5c57
URxvt*color9: #ff5c57

! DarkGreen + Green
URxvt*color2: #5af78e
URxvt*color10:#5af78e

! DarkYellow + Yellow
URxvt*color3: #f3f99d
URxvt*color11:#f3f99d

! DarkBlue + Blue
URxvt*color4: #57c7ff
URxvt*color12:#57c7ff

! DarkMagenta + Magenta
URxvt*color5: #ff6ac1
URxvt*color13:#ff6ac1

! DarkCyan + Cyan (both not tango)
URxvt*color6: #9aedfe
URxvt*color14:#9aedfe

! LightGrey + White
URxvt*color7: #eff0eb
URxvt*color15:#f1f1f0
